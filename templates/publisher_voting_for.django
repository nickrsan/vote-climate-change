            <label for="state">State</label><input name="state" id="state" />
            <input type="hidden" name="style_id" value="{{ style_id }}" />
            <input type="submit"  name="submit" id="publish_button" class="submit publish">
        </div>
		<div id="statement_media_additions" class="below_float">
