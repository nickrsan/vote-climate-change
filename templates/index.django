</head>
<body>
  
  <!-- Header and Nav -->
<div class="row" id="content">
	<div class="eight columns" id="main_body">
		<div class="row">
			<div class="panel">
				{% block title %}
					<h1>{% global_var 'SITE_NAME' %}</h1>
				{%  endblock %}

				{%  block pageheader %}
					<h2>{{ pagetitle }}</h2>
				{%  endblock %}
			</div>
		</div>

		<!-- Main Feed -->
		<!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->
		<div class="row">
			{% if alert_msg %}
				<div class="alert-box">
					{{ alert_msg }}
				</div>
			{% endif %}
			{%  if publisher %}
				{% include publisher %}
			{% endif %}
		</div>

		<div class="row" id="statements">
			{%  block other_content %}

			{%  endblock %}
			{% if statements %}
				{% block inner_title %}
					<h3>Recent Pledges</h3>
				{%  endblock %}
				{%  for statement in statements %} <!-- TODO Make output correct -->
					{{ statement.rendered_text|safe }}
					{%  comment %}
						{%  include "template_voting_for.django_include" %}
					{%  endcomment %}
				{% endfor %}
			{%  endif %}
		</div>
	</div>


		  <!-- Right Sidebar -->
		  <!-- On small devices this column is hidden -->
	<aside class="four columns" id="side_bar">
		<div class="row">
			<div class="twelve columns">
			<div class="highlight_post"><img src="http://placehold.it/300x150&text=[highlight]" style="width:300px;height:150px;background-color: #ccc;"/></div>
			<div class="box_widget"><h3>Not Registered?</h3><p>TurboVote can help you get registered in time <a class="button" id="reg_button" href="https://turbovote.org/register" target="_blank">Register Now</a></span></p></div>
			{% facts_box %}
			<div class="highlight_post"><img src="http://placehold.it/300x150&text=[num_pledges]" style="width:300px;height:150px;background-color: #ccc;"/></div>
			<div class="highlight_post"><img src="http://placehold.it/300x300&text=[highlight]" style="width:300px;height:300px;background-color: #ccc;"/></div>
		</div></div>
	</aside>
</div> <!-- class="row" -->
